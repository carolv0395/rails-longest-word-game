<h1>New Game</h1>
<div class="container">
  <ul>
  <% @letters.each do |letter| %>
    <li><%= letter %></li>
  <% end %>
  </ul>
</div>

<form action="score" method="POST" class="form-inline">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="answer">Enter word here:</label>
  <input id="answer" type="text" name="word">
  <input type="submit" value="Play">
</form>
